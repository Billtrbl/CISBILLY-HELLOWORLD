package October17;

public class CONTROLLER {

	// main method
	
	public static void main(String[] args)
	{
		// need to determine n
		int n = 5; 
		
		Car Car1 = new Car(100,20,10); // top speed, mpg, size of gas tank
		if(Car1.getGasTillNextPitStop(100) >= n) // if the amount of gas left in the tank is more than or equal to 5 ...
		{
			System.out.println("Test Pass"); // car continues to race..
		}
		else
		{
			System.out.println("Test Fail"); // if it's not then car goes to pit-stop
		}
		
		int o = 4;
		
		Car Car2 = new Car(120,10,10); // top speed, mpg, size of gas tank
		if(Car2.getGasTillNextPitStop(80) >= o) // if the amount of gas left in the tank is more than or equal to 4 ....
		{
			System.out.println("Test Pass"); // car continues to race ...
		}
		else
		{
			System.out.println("Test Fail"); // if not then car goes to pit-stop
		}
				
				
				
				
		// test case 1 : test miles left in car
		// test case 2 : test gas left in car
		// if mpg is 20
		// if tanksize is 10 gallons
		// if car has gone 20 miles the tank should have 9 gallons
		
	}
 
	
	
}
